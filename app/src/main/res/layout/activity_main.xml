<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/space_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_people"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="150dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:onClick="openChar"
        app:cardBackgroundColor="@color/cardBackgroundColor"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="90dp">

        <TextView
            android:id="@+id/people"

            android:text="   Characters"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:paddingTop="20dp"
            android:layout_gravity="end"
            android:src="@drawable/characters" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_planets"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:onClick="openPlanets"
        android:layout_height="150dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="10dp"
        app:cardBackgroundColor="@color/cardBackgroundColor"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/planets"
            android:text="Planets   "
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:paddingTop="25dp"
            android:layout_gravity="start"
            android:src="@drawable/planets"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_species"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:onClick="openSpecies"
        android:layout_height="150dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="10dp"
        app:cardBackgroundColor="@color/cardBackgroundColor"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/species"

            android:text="   species"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:layout_gravity="end"
            android:paddingTop="5dp"
            android:src="@drawable/species"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_vehicles"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:onClick="openVehicles"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="10dp"
        app:cardBackgroundColor="@color/cardBackgroundColor"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/vehicles"
            android:text="vehicles   "
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:paddingTop="25dp"
            android:scaleX="-1"
            android:layout_gravity="start"
            android:src="@drawable/vehicles"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_starships"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="150dp"
        card_view:cardCornerRadius="4dp"
        android:onClick="openStarShips"
        card_view:cardElevation="10dp"
        app:cardBackgroundColor="@color/cardBackgroundColor"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/starships"
            android:text="Starships"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/starships"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_films"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/cardBackgroundColor"
        app:cardCornerRadius="4dp"
        app:cardElevation="10dp"
        android:onClick="openFilms"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/films"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:text="Films"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/films"/>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>